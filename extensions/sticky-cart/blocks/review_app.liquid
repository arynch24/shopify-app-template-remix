<div
  id="review-widget"
  data-shop="{{ shop.permanent_domain }}"
  data-product-id="{{ product.id }}"
>
  Loading reviews...
</div>
<script src="{{ 'embed.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Review Widget",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "widget_title",
      "default": "Customer Reviews",
      "label": "Widget Title"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": true,
      "label": "Show Average Rating"
    },
    {
      "type": "checkbox",
      "id": "show_review_count",
      "default": true,
      "label": "Show Review Count"
    },
    {
      "type": "color",
      "id": "widget_bg_color",
      "default": "#f9f9f9",
      "label": "Widget Background Color"
    },
    {
      "type": "color",
      "id": "widget_text_color",
      "default": "#333333",
      "label": "Widget Text Color"
    }
  ]
}
{% endschema %}
